{
  "blocks": [
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "You can create a new issue in any channel managed by the Slack Manager (where you are also channel admin)."
      }
    },
    {
      "block_id": "select_channel",
      "type": "input",
      "optional": false,
      "label": {
        "type": "plain_text",
        "text": "Select a channel for the new issue"
      },
      "element": {
        "action_id": "select_channel_input",
        "type": "conversations_select",
        "focus_on_load": true,
        "response_url_enabled": false,
        "filter": {
          "include": [
            "public",
            "private"
          ],
          "exclude_bot_users": true,
          "exclude_external_shared_channels": true
        }
      }
    },
    {
      "block_id": "issue_severity",
      "type": "input",
      "optional": false,
      "label": {
        "type": "plain_text",
        "text": "Severity"
      },
      "element": {
        "action_id": "issue_severity_input",
        "type": "static_select",
        "initial_option": {
          "text": {
            "type": "plain_text",
            "text": "Warning"
          },
          "value": "warning"
        },
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Info"
            },
            "value": "info"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Warning"
            },
            "value": "warning"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Error"
            },
            "value": "error"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Panic"
            },
            "value": "panic"
          }
        ]
      }
    },
    {
      "block_id": "issue_follow_up_enabled",
      "type": "input",
      "optional": true,
      "label": {
        "type": "plain_text",
        "text": "Issue follow-up enabled"
      },
      "element": {
        "action_id": "issue_follow_up_enabled_input",
        "type": "checkboxes",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Issue follow-up enabled"
            },
            "value": "enabled"
          }
        ],
        "initial_options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Issue follow-up enabled"
            },
            "value": "enabled"
          }
        ]
      }
    },
    {
      "block_id": "issue_auto_resolve",
      "type": "input",
      "optional": true,
      "label": {
        "type": "plain_text",
        "text": "Auto resolve period in hours (if follow-up enabled)"
      },
      "element": {
        "action_id": "issue_auto_resolve_input",
        "type": "plain_text_input",
        "initial_value": "24",
        "multiline": false,
        "max_length": 4
      }
    },
    {
      "block_id": "issue_header",
      "type": "input",
      "optional": true,
      "label": {
        "type": "plain_text",
        "text": "Header (use :status: to include status icon)"
      },
      "element": {
        "action_id": "issue_header_input",
        "type": "plain_text_input",
        "initial_value": "",
        "multiline": false,
        "max_length": 100
      }
    },
    {
      "block_id": "issue_text",
      "type": "input",
      "optional": true,
      "label": {
        "type": "plain_text",
        "text": "Body"
      },
      "element": {
        "action_id": "issue_text_input",
        "type": "plain_text_input",
        "initial_value": "",
        "multiline": true,
        "max_length": 1000
      }
    },
    {
      "block_id": "issue_emoji",
      "type": "input",
      "optional": true,
      "label": {
        "type": "plain_text",
        "text": "Message icon emoji"
      },
      "element": {
        "action_id": "issue_emoji_input",
        "type": "plain_text_input",
        "initial_value": ":male-police-officer:",
        "multiline": false
      }
    }
  ]
}